@{
    ViewData["Title"] = "S3 Uploader Demo";
}

<div class="text-center">
    <h1>Upload an Image</h1>

    <!-- File Upload Form -->
    <form asp-action="Upload" method="post" enctype="multipart/form-data">
        <input type="file" name="file" class="form-control" />
        <button type="submit" class="btn btn-primary mt-3">Upload</button>
    </form>

    <!-- Download Section (Only shows after upload) -->
    @if (!string.IsNullOrEmpty(ViewBag.ImageUrl))
    {
        <div class="mt-4">
            <h4>Uploaded File:</h4>
            <img src="@ViewBag.ImageUrl" class="img-thumbnail" width="200" />
            <a href="/download/@ViewBag.FileName" class="btn btn-success mt-2">
                <i class="bi bi-download"></i> Download
            </a>
        </div>
    }

    @if (ViewBag.RecentUploads != null)
    {
        <div class="mt-5">
            <h4>Recent Uploads</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>File</th>
                        <th>Size (KB)</th>
                        <th>Uploaded At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in ViewBag.RecentUploads)
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@(file.FileSize / 1024)</td>
                            <td>@file.UploadTime.ToLocalTime()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <!-- Display error messages if upload fails -->
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <!-- Display success message with shareable link and copy button -->
        <div class="alert alert-success">
            @TempData["Success"]
            <br><strong>Link:</strong>
            <!-- The link points to our server endpoint, not directly to S3 (credentials hidden) -->
            <a id="shareLink" href="@TempData["ShareUrl"]" target="_blank">Your Image</a>
            <br>
            <!-- Copy button allows users to copy the link to clipboard -->
            <button id="copyBtn" class="btn btn-secondary btn-sm mt-2">Copy URL</button>
            <br><small>Note: the link will expire 10 minutes after upload.</small>
        </div>

        <script>
            // Copy link to clipboard when button is clicked
            document.getElementById('copyBtn').addEventListener('click', function() {
                // Get the href attribute which contains the full share URL
                const url = document.getElementById('shareLink').href;
                // Use modern Clipboard API to copy
                navigator.clipboard.writeText(url).then(() => {
                    alert('Link copied to clipboard');
                }).catch(err => {
                    console.error('Copy failed', err);
                });
            });
        </script>
    }

</div>